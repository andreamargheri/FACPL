{ pep:
	base
	pdp:
	permit-overrides
	Policy policy_privacy < permit-overrides
		target:
		(
			(
				equal ( "medical doctor" , subject / role )
			)
		) && (
			(
				equal ( "TREATEMENT" , subject / purposeofuse )
			)
		) && (
			(
				equal ( "34133-9" , resource / resource-id )
			)
		)
		rules:
		Rule rule1 ( permit target:
			(
				(
					equal ( "Read" , action / action-id )
				)
			)
			condition:
			subset ( string-bag( "urn:oasis:names:tc:xspa:1.0:subject:hl7:permission:PRD-003" ,
				"urn:oasis:names:tc:xspa:1.0:subject:hl7:permission:PRD-005" ,
				"urn:oasis:names:tc:xspa:1.0:subject:hl7:permission:PRD-010" ,
				"urn:oasis:names:tc:xspa:1.0:subject:hl7:permission:PRD-016" ) , subject / hl7.permission ) obl: )
		Rule denyRule ( deny obl: )

		obl:
		[ permit M log ( subject / subject-id , resource / resource-id ) ]
		[ deny M mail ( resource / email , "Your medical record has been requested by EpSOS subject" ) ]
	>
}
